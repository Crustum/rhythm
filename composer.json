{
    "name": "skie/rhythm",
    "description": "CakePHP Rhythm - Real-time application performance monitoring",
    "type": "cakephp-plugin",
    "license": "MIT",
    "require": {
        "php": ">=8.1",
        "cakephp/cakephp": "^5.0",
        "skie/signal_handler": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "cakephp/queue": "^2.0",
        "cakephp/cakephp-codesniffer": "^5.0"
    },
    "autoload": {
        "psr-4": {
            "Rhythm\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Rhythm\\Test\\": "tests/"
        }
    },
    "scripts": {
        "cs-check": "phpcs -p --standard=phpcs.xml src/ tests/",
        "cs-fix": "phpcbf --standard=phpcs.xml src/ tests/",
        "test": "phpunit",
        "test:unit": "phpunit --testsuite=Unit",
        "test:integration": "phpunit --testsuite=Integration",
        "test:coverage": "phpunit --coverage-html coverage",
        "rector-setup": "cp composer.json composer.backup && composer require --dev rector/rector:\"^2.1\" && mv composer.backup composer.json",
        "rector-check": "vendor/bin/rector process --dry-run",
        "rector-fix": "vendor/bin/rector process",
        "stan": "tools/phpstan analyse src/ ",
        "stan-test": "tools/phpstan analyse  tests/",
        "psalm": "tools/psalm --show-info=false",
        "stan-tests": "tools/phpstan analyze -c tests/phpstan.neon",
        "stan-baseline": "tools/phpstan --generate-baseline"
    },
    "extra": {
        "installer-name": "Rhythm"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
